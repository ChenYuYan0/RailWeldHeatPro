<UserControl
    x:Class="RailWeldHeatPro.Views.DeviceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RailWeldHeatPro.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RailWeldHeatPro.ViewModels"
    d:DataContext="{d:DesignInstance vm:DeviceViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#673AB7">
            <TextBlock
                Margin="10,10,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                Foreground="White"
                Text="产线总控制" />
        </Border>

        <Border
            Grid.Row="1"
            BorderBrush="#50a0ff"
            BorderThickness="1">
            <UniformGrid Rows="1">
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    Background="LimeGreen"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="TotalStart"
                    Content="总启动"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    Background="Red"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="TotalStop"
                    Content="总停止"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    Background="#50a0ff"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="MechanicalReset"
                    Content="机械复位"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    Background="#febf57"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="AlarmReset"
                    Content="报警复位"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    Background="#414141"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="IdleRun"
                    Content="空体运行"
                    FontSize="40" />
            </UniformGrid>
        </Border>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                BorderBrush="#50a0ff"
                BorderThickness="1">
                <UniformGrid Columns="1" Rows="2">
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="30"
                            Foreground="#1b2755"
                            Text="冷却室工位" />
                        <ToggleButton
                            Width="100"
                            Height="40"
                            IsChecked="{Binding PlcDataReadItem.CoolingRoomStation}"
                            ToolTip="MaterialDesignSwitchLightToggleButton">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="CoolingRoomStation" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="CoolingRoomStation" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>
                    </StackPanel>
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="30"
                            Foreground="#1b2755"
                            Text="输送机工位" />
                        <ToggleButton
                            Width="100"
                            Height="40"
                            IsChecked="{Binding PlcDataReadItem.ConveyorStation}"
                            ToolTip="MaterialDesignSwitchLightToggleButton">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="ConveyorStation" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="ConveyorStation" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>
                    </StackPanel>
                </UniformGrid>
            </Border>
            <Border
                Grid.Column="1"
                BorderBrush="#50a0ff"
                BorderThickness="1">
                <GroupBox FontSize="30" Header="日志文件">
                    <GroupBox.InputBindings>
                        <MouseBinding Command="{Binding ClearLogCommand}" Gesture="LeftDoubleClick" />
                    </GroupBox.InputBindings>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            FontSize="20"
                            Foreground="Black"
                            Text="{Binding LogContent}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>
