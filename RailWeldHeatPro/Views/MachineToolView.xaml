<UserControl
    x:Class="RailWeldHeatPro.Views.MachineToolView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="http://schemas.superdev.ch/valueconverters/2016/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gauge="clr-namespace:CircularGauge;assembly=CircularGauge"
    xmlns:local="clr-namespace:RailWeldHeatPro.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucs="clr-namespace:RailWeldHeatPro.Ucs"
    xmlns:vm="clr-namespace:RailWeldHeatPro.ViewModels"
    xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    d:DataContext="{d:DesignInstance vm:MachineToolViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToStringConverter
            x:Key="BoolToString"
            FalseValue="Red"
            TrueValue="Green" />
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <!--  5行  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>


            <!--  轴Grid  -->
            <Grid Grid.Row="0" DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--
                    轴标题label
                    HorizontalAlignment="Stretch"让文字填满单元格，这样border边框就在外边框上
                    如果HorizontalAlignment设为center，则border边框就在文字边框上
                    边框厚度BorderThickness="左厚度, 上厚度, 右厚度, 下厚度"
                -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,1,1,1"
                    Content="轴位置"
                    FontSize="18" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际位置(mm)"
                    FontSize="18" />
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际速度(mm/m)"
                    FontSize="18" />
                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="目标位置(mm)"
                    FontSize="18" />
                <Label
                    Grid.Row="0"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="目标速度(mm/m)"
                    FontSize="18" />
                <Label
                    Grid.Row="0"
                    Grid.Column="5"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际电流(A)"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="X轴(南北)"
                    FontSize="18" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="Y轴(东西)"
                    FontSize="18" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="Z轴(上下)"
                    FontSize="18" />
                <!--  x轴数据显示  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="xActPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.XActPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="xActSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.XActSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="xSetPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.XSetPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="xSetSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.XSetSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="xActCurrentTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.XActCurrent, StringFormat={}{0:F3}}" />
                </Border>
                <!--  Y轴数据显示  -->
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="yActPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.YActPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="yActSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.YActSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="ySetPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.YSetPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="ySetSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.YSetSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="yActCurrentTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.YActCurrent, StringFormat={}{0:F3}}" />
                </Border>
                <!--  Z轴数据显示  -->
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="zActPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ZActPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="zActSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ZActSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="zSetPosTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ZSetPos, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="zSetSpeedTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ZSetSpeed, StringFormat={}{0:F3}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="zActCurrentTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ZActCurrent, StringFormat={}{0:F3}}" />
                </Border>
            </Grid>

            <!--  设备传感器Grid  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--  设备传感器标题  -->
                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="6"
                    HorizontalContentAlignment="Center"
                    Background="{DynamicResource PrimaryHueLightBrush}"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,0"
                    Content="设备传感器数据"
                    FontSize="18"
                    Foreground="White" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,1,1,1"
                    Content="温度传感器"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际值"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="流量传感器"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="3"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际值"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="位移传感器"
                    FontSize="18" />
                <Label
                    Grid.Row="1"
                    Grid.Column="5"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,1,1,1"
                    Content="实际值"
                    FontSize="18" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="轨顶温度(℃)"
                    FontSize="18" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="轨脚温度(℃)"
                    FontSize="18" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="内轨脚温度(℃)"
                    FontSize="18" />
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="冷却温度(℃)"
                    FontSize="18" />


                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="轨顶流量(L/min)"
                    FontSize="18" />
                <Label
                    Grid.Row="3"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="轨腰流量(L/min)"
                    FontSize="18" />
                <Label
                    Grid.Row="4"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="轨底流量(L/min)"
                    FontSize="18" />
                <Label
                    Grid.Row="5"
                    Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="备用"
                    FontSize="18" />
                <Label
                    Grid.Row="2"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="Y轴跟踪(mm)"
                    FontSize="18" />
                <Label
                    Grid.Row="3"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="Z轴跟踪(mm)"
                    FontSize="18" />
                <Label
                    Grid.Row="4"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="喷风压力(Mpa)"
                    FontSize="18" />
                <Label
                    Grid.Row="5"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    Content="备用"
                    FontSize="18" />
                <!--  设备传感器数值  -->
                <!--  温度实际值  -->
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actTemp1Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActTemp1, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actTemp2Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActTemp2, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="4"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actTemp3Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActTemp3, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="5"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actTemp4Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActTemp4, StringFormat={}{0:F2}}" />
                </Border>
                <!--  流量实际值  -->
                <Border
                    Grid.Row="2"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actFlow1Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActFlow1, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actFlow2Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActFlow2, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="4"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actFlow3Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActFlow3, StringFormat={}{0:F2}}" />
                </Border>
                <Border
                    Grid.Row="5"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actFlow4Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path, StringFormat={}{0:F2}}" />
                </Border>

                <!--  位移跟踪  -->
                <Border
                    Grid.Row="2"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actLenght1Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActLenght1, StringFormat={}{0:F2}}" />
                </Border>
                <!--  Z轴位置传感器  -->
                <Border
                    Grid.Row="3"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actLenght2Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActLenght2, StringFormat={}{0:F2}}" />
                </Border>
                <!--  压力实际值  -->
                <Border
                    Grid.Row="4"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actPressureTbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=PlcDataReadItemProp.ActPressure, StringFormat={}{0:F2}}" />
                </Border>
                <!--  压力实际值  -->
                <Border
                    Grid.Row="5"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0">
                    <TextBlock
                        x:Name="actPressure1Tbk"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Path=Pressure1, StringFormat={}{0:F2}}" />
                </Border>

            </Grid>

            <!--  设备执行状态  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="8"
                    HorizontalContentAlignment="Center"
                    Background="{DynamicResource PrimaryHueLightBrush}"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    Content="设备执行状态"
                    FontSize="18"
                    Foreground="White" />
                <!--  设备执行状态  -->
                <ucs:StatusControl
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    ButtonBackground="{Binding PlcDataReadItemProp.DY_ZT, Converter={StaticResource BoolToString}}"
                    IsIndeterminate="{Binding PlcDataReadItemProp.DY_ZT}"
                    StatusText="电源状态" />
                <ucs:StatusControl
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    ButtonBackground="{Binding PlcDataReadItemProp.PQ_ZT, Converter={StaticResource BoolToString}}"
                    IsIndeterminate="{Binding PlcDataReadItemProp.PQ_ZT}"
                    StatusText="喷气状态" />
                <ucs:StatusControl
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    ButtonBackground="{Binding PlcDataReadItemProp.ProcessOk, Converter={StaticResource BoolToString}}"
                    IsIndeterminate="{Binding PlcDataReadItemProp.ProcessOk}"
                    StatusText="工件加工完成" />

            </Grid>

            <!--  底部仪表盘  -->
            <Grid
                Grid.Row="3"
                Margin="0,10,0,0"
                DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <gauge:CircularGaugeControl
                        x:Name="TGauge1"
                        Width="240"
                        Height="240"
                        Margin="20,2,20,2"
                        CurrentValue="{Binding Path=PlcDataReadItemProp.Voltage}"
                        DialText="{Binding Path=PlcDataReadItemProp.Voltage, StringFormat=电压 {0:000} V}"
                        DialTextColor="White"
                        DialTextOffset="88"
                        GaugeBackgroundColor="Black"
                        ImageOffset="-38"
                        ImageSize="30,40"
                        MajorDivisionsCount="10"
                        MajorTickColor="LightGray"
                        MajorTickSize="10,3"
                        MaxValue="600"
                        MinValue="0"
                        MinorDivisionsCount="5"
                        MinorTickColor="LightGray"
                        MinorTickSize="3,1"
                        OptimalRangeEndValue="480"
                        OptimalRangeStartValue="200"
                        PointerCapRadius="30"
                        PointerLength="60"
                        PointerThickness="13"
                        Radius="120"
                        RangeIndicatorLightOffset="60"
                        RangeIndicatorLightRadius="8"
                        RangeIndicatorRadius="95"
                        RangeIndicatorThickness="10"
                        ScaleLabelFontSize="10"
                        ScaleLabelForeground="LightGray"
                        ScaleLabelRadius="83"
                        ScaleLabelSize="40,20"
                        ScaleRadius="66"
                        ScaleStartAngle="120"
                        ScaleSweepAngle="300" />
                    <Label
                        HorizontalContentAlignment="Center"
                        Content="电压仪表盘"
                        FontSize="18" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <gauge:CircularGaugeControl
                        x:Name="TGauge2"
                        Width="240"
                        Height="240"
