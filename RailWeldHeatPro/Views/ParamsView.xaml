<UserControl
    x:Class="RailWeldHeatPro.Views.ParamsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RailWeldHeatPro.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RailWeldHeatPro.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#546e7a" BorderThickness="1">
            <StackPanel>
                <Button Content="保存参数" Style="{DynamicResource CtyButtonStyle}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="5"
                            Content="PLC地址：" />
                        <TextBox
                            Width="150"
                            Margin="5"
                            Text="{Binding RootParamProp.PlcParam.PlcIp}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="80,5,5,5"
                            Content="PLC类型：" />
                        <TextBox
                            Width="150"
                            Margin="5"
                            Text="{Binding RootParamProp.PlcParam.PlcType}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="5"
                            Content="端口号：" />
                        <TextBox
                            Width="150"
                            Margin="5"
                            Text="{Binding RootParamProp.PlcParam.PlcPort}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="80,5,5,5"
                            Content="超时时间：" />
                        <TextBox
                            Width="150"
                            Margin="5"
                            Text="{Binding RootParamProp.PlcParam.PlcConnectTimeOut}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="5"
                            Content="循环时间：" />
                        <TextBox
                            Width="150"
                            Margin="5"
                            Text="{Binding RootParamProp.PlcParam.PlcCycleInterval}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="5"
                            VerticalAlignment="Center"
                            Content="自动模拟：" />
                        <ToggleButton
                            Width="60"
                            Margin="5"
                            Command="{Binding MockDataCommand}"
                            IsChecked="{Binding MockCheck, Mode=TwoWay}"
                            ToolTip="自动模拟开关" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <Label
                            Width="80"
                            Margin="5"
                            VerticalAlignment="Center"
                            Content="自动采集：" />
                        <ToggleButton
                            Width="60"
                            Margin="5"
                            Command="{Binding CollectDataCommand}"
                            IsChecked="{Binding CollectCheck, Mode=TwoWay}"
                            ToolTip="自动模拟开关" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
